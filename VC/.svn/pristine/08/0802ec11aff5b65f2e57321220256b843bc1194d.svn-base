*{margin:0;padding:0;outline:0;}
#taMenu{position:relative; margin:5px 0 0 0; height:100%; border:0px; z-index:99;top:53px;}
#taMenu a{color:#fff; margin:0; padding:0; font-weight:bold;}
#taMenu a:hover{color:#ff1f00; font-weight:bold;}
#taMenu-side{position:relative;width:100%;height:33px;background: url(../images/tpmnu-bg.jpg) repeat-x bottom; border-left:1px solid #fff; border-right:1px solid #fff;}
#taMenu .ta-mainmnu{margin:2px 2px 0 1px;}
#taMenu .ta-mainmnu li{list-style:none;cursor:pointer;float:left;min-height:32px;line-height:32px;margin:1px 0 0 0;padding-left:15px;padding-right:15px; text-decoration:none;}
#taMenu #ta-right{float:right;background:none;padding-right:5px;}
#taMenu .ta-mainmnu li.current{background:url(../images/topbtn-hover-bg.jpg) repeat-x;z-index:3;}
#taMenu .ta-mainmnu li.current a{font-size:12px; color:#ff1f00; font-weight:bold;}
#taMenu .ta-mainmnu li .ta-submnu{position:absolute;left:0;top:33px;width:98.3%;display:none;overflow:hidden;border:solid #aaa;border-width:0 1px 1px 1px;background:#fff url(../images/topsubmnu-bg.jpg) repeat-x top; -moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; padding:10px; opacity: 0.9; filter: alpha(opacity=90);}
.notelist{right:1px !important;width:300px !important;left:auto!important;border-color:pink !important;background:#fff url(../images/topsubmnu-bg-note.jpg) repeat-x top !important;}
#taMenu .ta-mainmnu li .ta-submnu li{padding:0px 15px 10px 10px; width:420px; text-indent:0;line-height:18px;color:#000;border:0;background:none;}
#taMenu .ta-mainmnu li .ta-submnu li a{font-size:12px;font-weight:bold;color:#ff1f00;}
#taMenu .ta-mainmnu li .ta-submnu li ul{padding:5px 0 0 0;}
#taMenu .ta-mainmnu li .ta-submnu li li{padding:0 0 0 0; color:#ccc;}
#taMenu .ta-mainmnu li .ta-submnu li li a{color:#777; display:inline-block;font-weight:normal;}
#taMenu .ta-mainmnu li .ta-submnu li li a:hover{color:#ff1f00; text-decoration:underline;font-weight:normal;}
#taMenu-side li{font-size:12px;}
.hidden{display:none;clear:both;}
a:link,a:visited{color:#666666;text-decoration:none;}